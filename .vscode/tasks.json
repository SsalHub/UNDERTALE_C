{
    "version": "2.0.0",
    "runner": "externalTerminal",
    "type": "shell",
    "echoCommand": false,
    "presentation": {
        "reveal": "always",
    },
    "tasks": [
        {
            "label": "Build",
            "command": "mingw32-make",
            "group": "build",
            "args": [
                "all",
                "/C",
                "${workspaceRoot}"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Execute",
            "command": "${workspaceRoot}\\Undertale.exe",
            "group": "test",
            "args": [
                "/C",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Clean",
            "command": "mingw32-make",
            "args": [
                "clean",
                "/C",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
    ]
}